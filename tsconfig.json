{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_module/@types",
      "./src/@types"
    ],
    "types": ["@types/jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@configs/*": ["./src/configs/*"],
      "@errors/*": ["./src/errors/*"],
      "@libs/*": ["./src/libs/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
